<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.decifraapp.layout.flSearch">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDialog"
        android:visibility="invisible"
        android:id="@+id/fl_search_vBackGround">
    </View>
    <ProgressBar
        android:id="@+id/fl_search_ivWaitIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fl_search_llPrincipal"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <EditText
            android:paddingTop="20dp"
            android:inputType="textUri"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/fl_search_txtMusic"
            android:hint="@string/fl_search_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:paddingTop="20dp"
            android:inputType="textUri"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/fl_search_txtArtist"
            android:hint="@string/fl_search_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:gravity="center"
            android:text="@string/fl_search_search"
            android:id="@+id/fl_search_btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ListView
        android:id="@+id/fl_search_lvSearchResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

    </ListView>


</FrameLayout>
