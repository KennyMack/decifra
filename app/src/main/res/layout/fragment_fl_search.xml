<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.decifraapp.layout.flSearch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/fl_search_llPrincipal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <EditText
                android:paddingTop="20dp"
                android:inputType="textAutoComplete"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/fl_search_txtArtist"
                android:hint="@string/fl_search_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:paddingTop="20dp"
                android:inputType="textAutoComplete"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/fl_search_txtMusic"
                android:hint="@string/fl_search_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:gravity="center"
                android:text="@string/fl_search_search"
                android:id="@+id/fl_search_btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/fl_search_ivWaitIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_gravity="center"
                android:visibility="invisible" />
            <ListView
                android:id="@+id/fl_search_lvSearchResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

            </ListView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
